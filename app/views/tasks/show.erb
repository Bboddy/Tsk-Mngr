<!DOCTYPE html>
<html>
<head>
	<title>Tsk-Mngr</title>
	<link rel="stylesheet" href="./css/style.css">
    <meta charset="UTF-8">
</head>
<body>
	<section id="particles-js">
		<h1>Your Tasks</h1>
		<div id="inputs">
			<p>
				<% @tasks = Task.where(user_id: session[:user_id]) %>

				<% @tasks.each do |task|%>
			    <li>
			      Name: <%= task.name %>
			      Description: <%= task.description %>
			      Due Date: <%= task.due_date %>
			    </li>
			  <% end %>
			</p>
		</div>
	</section>
</body> 	