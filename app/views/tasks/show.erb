<!DOCTYPE html>
<html>
<head>
	<title>Tsk-Mngr</title>
	<link rel="stylesheet" href="./css/style.css">
    <meta charset="UTF-8">
</head>
<body>
	<section id="particles-js">
		<h1>Create a Task</h1>
		<p>
			<% @tasks = Task.where(user_id: session[:user_id]) %>

			<% @tasks.each do |task|%>
		    <li>
		      Name: <%= task.name %>
		      Description: <%= task.ingredients %>
		      Due Date: <%= task.cook_time %>
		    </li>
		  <% end %>
		</p>
	</section>
</body> 	